<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageviewHinh"
        android:layout_width="101dp"
        android:layout_height="101dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/corner"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textviewPackingStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageviewHinh"
        android:text="Nơi đóng hàng:"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textviewPortOfLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewPackingTime"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/imageviewHinh"
        android:text="Cảng xuất hàng:"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textviewPackingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewPackingStation"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/imageviewHinh"
        android:text="Thời gian đóng hàng:"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textviewCutOffTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewPortOfLoading"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/imageviewHinh"
        android:text="Thời gian Cut-off:"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textviewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewPackingStation"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="88dp"
        android:layout_toEndOf="@+id/imageviewHinh"
        android:layout_toRightOf="@+id/imageviewHinh"
        android:text="Trạng Thái"
        android:textColor="#003cff"
        android:textSize="10sp" />

</RelativeLayout>